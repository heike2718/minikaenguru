{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@minikaenguru-ws/common-auth": [
        "libs/common-auth/src/index.ts"
      ],
      "@minikaenguru-ws/common-components": [
        "libs/common-components/src/index.ts"
      ],
      "@minikaenguru-ws/common-logging": [
        "libs/common-logging/src/index.ts"
      ],
      "@minikaenguru-ws/common-messages": [
        "libs/common-messages/src/index.ts"
      ],
      "@minikaenguru-ws/common-schulkatalog": [
        "libs/common-schulkatalog/src/index.ts"
      ],
      "@minikaenguru-ws/admin-schulkatalog": [
        "libs/admin-schulkatalog/src/index.ts"
      ],
      "@minikaenguru-ws/shared/util-mk": [
        "libs/shared/util-mk/src/index.ts"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
